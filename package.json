{
  "name": "clikz",
  "version": "1.5.1",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "debug:dev": "pnpm --filter web debug:dev",
    "ui": "pnpm --filter @clikz/ui ui",
    "utils": "pnpm --filter @clikz/utils",
    "web": "pnpm --filter web",
    "email": "pnpm --filter @clikz/emails email:dev",
    "db:push": "pnpm --filter web db:push",
    "db:studio": "pnpm --filter web db:studio",
    "gen": "turbo gen workspace",
    "sync:list-mis": "syncpack list-mismatches"
  },
  "devDependencies": {
    "@clikz/eslint-config": "workspace:*",
    "@clikz/typescript-config": "workspace:*",
    "eslint-config-turbo": "2.1.1",
    "prettier": "catalog:",
    "syncpack": "^13.0.0",
    "turbo": "2.4.2"
  },
  "packageManager": "pnpm@9.12.0",
  "engines": {
    "node": ">=20.17.0"
  },
  "volta": {
    "node": "20.17.0",
    "pnpm": "9.12.0"
  }
