model Workspace {
  id         String       @id @default(cuid())
  name       String
  slug       String
  User       User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  Invite     Invite[]
  Link       Link[]
  Membership Membership[]
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt

  @@unique([slug])
  @@unique([id, slug])
  @@index([userId, slug])
}

model Invite {
  id          String     @id @default(cuid())
  email       String
  token       String
  expires     DateTime
  Workspace   Workspace  @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  workspaceId String
  role        MemberRole
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([workspaceId])
}

model Membership {
  id          String     @id @default(cuid())
  email       String
  User        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  role        MemberRole
  Workspace   Workspace  @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  workspaceId String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([workspaceId])
}

enum MemberRole {
  ADMIN
  MEMBER
}
